<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"



    >


    <LinearLayout
        android:id="@+id/text_cont"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"

        >

        <TextView

            android:id="@+id/team"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:gravity="center"
            android:text="الفريق"
            android:textColor="@color/black"
            android:textSize="15sp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#d6898989"
            />

        <TextView
            android:id="@+id/partners"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:gravity="center"
            android:text="الشركاء"
            android:textColor="#dd585858"
            android:textSize="15sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#d6898989"
            />

        <TextView
            android:id="@+id/follow_us"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:gravity="center"
            android:text="تابعونا"
            android:textColor="#dd585858"
            android:textSize="15sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#d6898989"
            />

        <TextView
            android:id="@+id/developer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:gravity="center"
            android:text="المطور"
            android:textColor="#dd585858"
            android:textSize="15sp"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_cont"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d6898989"
        />


    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/xex"
        android:alpha=".20"
        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag"
        android:layout_below="@+id/text_cont"
        >


    </FrameLayout>


</RelativeLayout>