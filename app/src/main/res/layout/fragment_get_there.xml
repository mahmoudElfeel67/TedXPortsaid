<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >


    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_margin="15dp"
        >


    </com.google.android.gms.maps.MapView>

    <TextView
        android:id="@+id/get_there_desc"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/map_view"
        android:layout_height="180dp"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_toEndOf="@id/map_view" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/map_view"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#d6898989"
        android:layout_marginTop="30dp"
        />


    <TextView
        android:id="@+id/voucher_code_desc"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/round_arrow"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/careem_container"
        android:layout_marginBottom="25dp"
        android:textSize="14sp"
        android:layout_marginLeft="-20dp"
        android:layout_marginStart="-20dp" />






</RelativeLayout>