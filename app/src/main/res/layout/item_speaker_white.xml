<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_speaker_round"
        android:layoutDirection="ltr"
        android:elevation="2dp"
        tools:targetApi="lollipop"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        tools:ignore="RtlHardcoded,UselessParent">


        <RelativeLayout
            android:id="@+id/insider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/speaker_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/da7e7"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />

            <TextView
                android:id="@+id/speaker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="الدحيح"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/speaker_image"
                tools:ignore="RtlHardcoded"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/speaker_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text=" المجره"
                android:layout_marginRight="20dp"
                android:textColor="#e2646464"
                android:layout_toLeftOf="@+id/speaker_title"
                tools:ignore="RtlHardcoded"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/speaker_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/insider"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="مثال للشرح "
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded"
            android:alpha="0"
            fontPath="@string/smallFont"
            />

    </RelativeLayout>

</RelativeLayout>
