<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/developer_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/red_stroke_team_member"
            android:padding="1dp"
            android:src="@drawable/official"

            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_red"
            android:padding="1dp"
            android:alpha=".10"
            />


    </RelativeLayout>




    <TextView
        fontPath="@string/smallFont"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/developer"
        android:textSize="18sp"
        tools:ignore="MissingPrefix"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/face_book"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/facebook"


            />

        <ImageView
            android:id="@+id/linked_in"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/linkedin_logo"


            />

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:src="@drawable/whatsapp_logo"

            />

        <ImageView
            android:id="@+id/gmail"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:src="@drawable/gmail"
            />

        <ImageView
            android:id="@+id/google_play"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:padding="2dp"
            android:src="@drawable/google_play"
            />


    </LinearLayout>


</LinearLayout>