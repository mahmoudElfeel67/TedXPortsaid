<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        >

        <ImageView
            android:id="@+id/developer_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/official"
            android:background="@drawable/red_stroke_team_member"
            android:padding="1dp"

            />

        <TextView
            android:id="@+id/developer_recog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:text="تم تطوير البرنامج من محمود الفيل"
            android:layout_margin="15dp"
            android:gravity="center"
            fontPath="GE_SS_Two_Light.otf"


            />

        <LinearLayout
            android:id="@+id/social_cont"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/fb_logo"


                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/whatsapp_logo"
                android:layout_marginLeft="2dp"

                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/gmail_logo"
                android:layout_marginLeft="2dp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/googleplay_logo"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                />



        </LinearLayout>




    </LinearLayout>

</LinearLayout>